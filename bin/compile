#!/usr/bin/env bash

indent() {
    sed -u 's/^/      /'
}

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

APPFILE=$(cat ${ENV_DIR}/APPFILE)

if [[ -z "${PROCFILE}" ]]; then
    echo "PROCFILE was not set. Aborting" | indent
    exit 1
fi

cp ${BUILD_DIR}/${APPFILE} ${BUILD_DIR}/App.json

if ! [ $? ]; then
    echo "FAILED to copy a App.json" | indent
    exit 1
fi

echo "Copied ${APPFILE} as App.json successfully" | indent
